liczba = input("Podaj liczbę całkowitą: ")
maks = liczba
minimalna = liczba
lista_liczb=[]

lista_liczb.append(liczba)
if maks < liczba:
    maks = liczba
elif minimalna > liczba:
    minimalna = liczba


